<div class="row">
    <div class="twelve columns">
        <form method="post" action="/hunch/edit/{{#hunch}}{{id}}{{/hunch}}">
            <div class="row">
                <div class="six columns">
                    <h1>Edit a hunch</h1>

                    <select id="select-coders" name="coders[]" multiple class="demo-default" placeholder="Select some coders">
                        <option value="">Select some coders...</option>
                        {{#hunch_coders}}
                        <option value="{{id}}" selected>{{name}}</option>
                        {{/hunch_coders}}
                        {{#coders}}
                        <option value="{{id}}">{{name}}</option>
                        {{/coders}}
                    </select>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="six columns">
                <textarea class="u-full-width" placeholder="What is this hunch about?" name="hunchDescription" required>{{#hunch}}{{description}}{{/hunch}}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="six columns">
                <select id="select-tags" name="tags[]" multiple class="demo-default" placeholder="Select some tags">
                    <option value="">Select some tags...</option>
                    {{#hunch_tags}}
                    <option value="{{id}}" selected>{{tag_name}}</option>
                    {{/hunch_tags}}
                    {{#tags}}
                    <option value="{{id}}">{{tag_name}}</option>
                    {{/tags}}
                </select>
            </div>
            <div class="two columns">
                <input type="button" name="add-tag" value="Add new tag">
            </div>
        </div>
        <div class="row">
            <div class="six columns">
                <div class="four columns">
                    <input type="radio" name="rating" value="3">
                    <img src="/emoticons/1.gif" border="0" alt="Happy" title = "Happy emoticon" />
                    <label>Positive</label>
                </div>

                <div class="four columns">
                    <input type="radio" name="rating" value="2">
                    <img src="/emoticons/2.gif" border="0" alt="Observational" title = "Observational emoticon" />
                    <label>Informing</label>
                </div>

                <div class="four columns">
                    <input type="radio" name="rating" value="1">
                    <img src="/emoticons/3.gif" border="0" alt="Disappointed" title = "Disappointed emoticon" />
                    <label>Negative</label>
                </div>
            </div>
        </div>
        <div class="row">
            <input class="button-primary" type="submit" value="Submit">
        </div>
    </form>
</div>
</div>
<script>
    $select = $('#select-coders').selectize({
        maxItems: 3,
        create: false,
    });
    $selectTags = $('#select-tags').selectize({
        maxItems: 3,
        create: false,
    });
</script>