<div class="row">
    <div class="twelve columns">
        <form method="post" action="/hunch/new">
            <div class="row">
                <div class="six columns">
                    <h1>Create a hunch</h1>

                    {{#if msg}}
                    <h2 style="color:red;">
                        {{msg}}
                    </h2>
                    {{/if}}

					<select id="select-state" name="coders[]" multiple class="demo-default" placeholder="Select some coders">
						<option value="">Select some coders...</option>
						{{#if coders}}
                            {{#each coders}}
                            <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        {{else}}
                            <option>No coders</option>
                        {{/if}}

					</select>
                </div>
            </div>

            <div class="row">
                <div class="six columns">
                    <textarea class="u-full-width" placeholder="What is this hunch about?" name="hunchDescription">{{#if hunchDescription}}{{hunchDescription}}{{/if}}</textarea>
                </div>
            </div>
            <div class="row">
                <div class="six columns">
					<select id="select-tags" name="tags[]" multiple class="demo-default" placeholder="Select some tags">
						<option value="">Select some tags...</option>
                        {{#if tags}}
                            {{#each tags}}
                            <option value="{{id}}">{{tag_name}}</option>
                            {{/each}}
                        {{else}}
                            <option>No tags</option>
                        {{/if}}
						
					</select>

                </div>
                <div class="two columns">
                    <input type="button" value="Add tag">
                </div>
            </div>

            <div class="row">
                <div class="six columns">
                    <input type="radio" name="rating" value="1">1
                    <input type="radio" name="rating" value="2">2
                    <input type="radio" name="rating" value="3">3
                    <input type="radio" name="rating" value="4">4
                    <input type="radio" name="rating" value="5">5
                </div>
            </div>

            <div class="row">
                <input class="button-primary" type="submit" value="Submit">
            </div>
        </form>
    </div>
</div>
<script>
				$select = $('#select-state').selectize({
					maxItems: 3,
					create: false,
				});

                $selectTags = $('#select-tags').selectize({
					maxItems: 3,
					create: false,
				});

				</script>
